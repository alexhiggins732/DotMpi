	    {#>

        public static string For(<#	for(var j=0; j<=i;j++){#>int arg<#=j#><#if(j<i){#>, <#}#><#}#>) 
            => $"Thread {arg0} - Cpu {Cpu} - Process {ProcessId}: {nameof(For)}";
